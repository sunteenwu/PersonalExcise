<Page x:Class="CXML.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:CXML"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBox x:Name="TxtInput" Header="Please input the value you want to insert to input1 node where header id=1" />
        <StackPanel Orientation="Horizontal">      
            <Button x:Name="BtnXmlWrite"
                    Click="BtnXmlWrite_Click"
                    Content="Insert value" />
            <Button x:Name="BtnXmlLinq"
                    Click="BtnXmlLinq_Click"
                    Content="Insert value by linq" />
            <Button x:Name="BtnReader"
                    Click="BtnReader_Click"
                    Content="read value by xmltxtreader" />
        </StackPanel>
        <RichEditBox x:Name="ShowXMLResult"
                     MinWidth="100"
                     MinHeight="100" />
        <Button x:Name="BtnSave"
                Click="BtnSave_Click"
                Content="Save xml" />
    </StackPanel>
</Page>
