<Page x:Class="StorageFile2.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:StorageFile2"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="20">
        <TextBox x:Name="PlayerName"
                 Width="300"
                 Height="100"
                 Header="filename" />
        <Button x:Name="SaveToAsserts"
                Click="SaveToAsserts_Click"
                Content="Save file to asserts" />


        <Button x:Name="ReplaceLocal"
                Click="ReplaceLocal_Click"
                Content="Replace local foder picture" />
        <Image x:Name="head" />
    </StackPanel>
</Page>
