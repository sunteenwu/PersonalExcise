<Page x:Class="CCustomControl.ExtendSplash"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:CCustomControl"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="#464646">
        <Canvas>
            <Image x:ConnectionId='2' x:Name="extendedSplashImage" Source="Assets/caffe600320.jpg"/>
            <ProgressRing x:ConnectionId='3' Name="splashProgressRing" IsActive="True" Width="20" HorizontalAlignment="Center"/>
        </Canvas>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button x:ConnectionId='1' x:Name="DismissSplash" Content="Dismiss extended splash screen" HorizontalAlignment="Center"                                   />
        </StackPanel>
    </Grid>
</Page>

