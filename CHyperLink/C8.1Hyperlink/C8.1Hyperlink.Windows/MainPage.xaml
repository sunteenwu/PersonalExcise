<Page x:Class="C8._1Hyperlink.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:C8._1Hyperlink"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="tb"
                   Width="700"
                   Height="100"
                   FontSize="25"
                   IsTextSelectionEnabled="True">
            <TextBlock.Inlines>
                <Hyperlink x:Name="Hy" NavigateUri="https://msdn.microsoft.com/en-us/library">
                    <Run Text="https://msdn.microsoft.com/en-us/library" />
                </Hyperlink>
            </TextBlock.Inlines>
        </TextBlock>
        <TextBlock x:Name="myTextBlock"></TextBlock>
        <Button x:Name="BtnSettext" Click="BtnSettext_Click" Content="Btn set text">            
        </Button>
    </StackPanel>
</Page>
