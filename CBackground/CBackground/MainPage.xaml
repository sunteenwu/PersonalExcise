      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:CBackground"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="20">
        <Button x:Name="BtnRegister"
                Click="OnReg"
                Content="Register CaptureUITest background task" />
        <Button x:Name="BtnUnRegister"
                Click="OnUnreg"
                Content="Unregester the background task" />
        <Button x:Name="BtnConverttest"
                Click="BtnConverttest_Click"
                Content="convert test" />
