<Page
    x:Class="CFrameBackground.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CFrameBackground"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <Grid >
        <Canvas>
            <!--<Polyline Margin="50,50,0,0" StrokeThickness="4"  ></Polyline>-->
          
            <Rectangle Height="20" Width="300" Fill="Blue" Margin="50, 30, 0 ,0"  />
            <Border Height="20" Width="300" Background="Green" Margin="50, 50, 0 ,0" BorderBrush="Red" BorderThickness="0,0,0,4" />
             <Line Margin="50,50,0,0" StrokeThickness="4"  X1="0" Y1="0"    X2="300" Y2="0"    Stroke="Red"  ></Line>
        </Canvas>
        <Button x:Name="BtnNavigate" Click="BtnNavigate_Click" Content="Navigate to next page"></Button>
    </Grid>
</Page>
