<Page x:Class="CMapControl.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:CMapControl"
      xmlns:map="using:Windows.UI.Xaml.Controls.Maps"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:ConnectionId='1' x:Name="BtnPolygon"
                                        
                Content="Add polygon to the map" />
        <map:MapControl x:ConnectionId='2' x:Name="myMap"
                        Width="500"
                        Height="500"
                        ZoomLevel="5">
            <map:MapItemsControl x:ConnectionId='3' x:Name="MapItems">
                <map:MapItemsControl.ItemTemplate>
                    <DataTemplate>
                        <map:MapPolyline Path="{Binding PolyLinePath}" StrokeColor="Blue" />
                    </DataTemplate>
                </map:MapItemsControl.ItemTemplate>
            </map:MapItemsControl>
        </map:MapControl>
    </StackPanel>
</Page>

