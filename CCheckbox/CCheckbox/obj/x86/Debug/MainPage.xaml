<Page x:ConnectionId='1' x:Class="CCheckbox.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:CCheckbox"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="5">
        <CheckBox x:ConnectionId='2' x:Name="OptionsAllCheckBox"
                  Content="Select all"
                  IsThreeState="True" />
        <CheckBox x:ConnectionId='3'                                     IsThreeState="True" />
        <CheckBox x:ConnectionId='4' IsThreeState="True"                          />
        <CheckBox x:ConnectionId='5'                                                     IsThreeState="True" />
        <CheckBox IsChecked="{Binding IsSelectAll1, Mode=OneWay}" IsThreeState="True" />
        <CheckBox IsChecked="{x:Null}" />
        <TextBox Width="100"
                 Height="100"
                 Background="Pink"
                 Text="{Binding}" />
    </StackPanel>

</Page>

