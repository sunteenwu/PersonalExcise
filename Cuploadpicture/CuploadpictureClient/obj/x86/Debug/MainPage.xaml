<Page x:Class="CuploadpictureClient.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:CuploadpictureClient"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <StackPanel Margin="0,0,-321,0" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel x:ConnectionId='1' x:Name="ContentPanel"
                    Width="500"
                    Height="300">
            <Image x:ConnectionId='6' Name="Image"
                   Grid.Row="1"
                   Source="/Assets/HelloWorld.png" />
            <Button x:ConnectionId='7' x:Name="BtnResizeSave"
                                               
                    Content="resizesave" />
            <Button x:ConnectionId='8' x:Name="BtnGetDpi"
                                           
                    Content="GetDpi" />
        </StackPanel>
        <Image x:ConnectionId='2' x:Name="imgbit"
               Width="150"
               Height="150" />
        <Image x:ConnectionId='3' x:Name="imgshow"
               Width="200"
               Height="200"
               Margin="50" />
        <Button x:ConnectionId='4' x:Name="connectsql"
                                        
                Content="connect sql" />
        <Button x:ConnectionId='5' x:Name="Convert"
                                     
                Content="Convert" />


    </StackPanel>

</Page>

