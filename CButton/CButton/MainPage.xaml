        <Button x:Name="ChangeBackground" Content="Change background color"  Style="{StaticResource ButtonStyle1}" Click="ChangeBackground_Click"></Button>


        <Button x:Name="CustomHyperlink" Content="CustomHyperlink" Click="CustomHyperlink_Click" Background="#99FFFFFF"></Button>
        <HyperlinkButton x:Name="hypertest" Content="I'm hyperlinkbutton">

        </HyperlinkButton>

        <TextBlock Padding="50" ><Hyperlink NavigateUri="http://www.bing.com" >Go to Bing direct in xaml</Hyperlink></TextBlock>
    </StackPanel>
</Page>
