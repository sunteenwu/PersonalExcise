<Page x:Class="CEntityFrame.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:CEntityFrame"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Text="First Name" />
        <TextBox x:ConnectionId='1' Name="FirstName"
                 Grid.Row="0"
                 Grid.Column="1"
                 Margin="0,0,0,5" />

        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Text="Last Name" />
        <TextBox x:ConnectionId='2' Name="LastName"
                 Grid.Row="1"
                 Grid.Column="1"
                 Margin="0,0,0,5" />

        <TextBlock Grid.Row="2"
                   Grid.Column="0"
                   Text="Email" />
        <TextBox x:ConnectionId='3' Name="Email"
                 Grid.Row="2"
                 Grid.Column="1"
                 Margin="0,0,0,5" />

        <TextBlock Grid.Row="3"
                   Grid.Column="0"
                   Text="Skill" />
        <ComboBox x:ConnectionId='4' Name="Skills"
                  Grid.Row="3"
                  Grid.Column="1"
                  Margin="0,0,0,5"
                  DisplayMemberPath="Skill"
                  SelectedValuePath="Skill" />

        <Button x:ConnectionId='5' Grid.Row="4"
                Grid.Column="1"
                Margin="0,0,0,5"
                                 >
            Add
        </Button>

        <ListView x:ConnectionId='6' Name="Contacts"
                  Grid.Row="5"
                  Grid.ColumnSpan="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding FirstName}" />
                        <TextBlock Margin="5,0,0,0" Text="{Binding LastName}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

